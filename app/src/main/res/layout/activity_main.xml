<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="쇼핑 도우미"
        android:textSize="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="onSearchClicked"
        android:text="쇼핑시작"
        android:textSize="22dp" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="onWishClicked"
        android:text="나의 관심 상품"
        android:textSize="22dp" />

    />

    <Button
        android:id="@+id/info"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="onInfoClicked"
        android:text="나의 정보 수정"
        android:textSize="22dp" />
    />

    <Button
        android:id="@+id/web"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="onWebClicked"
        android:text="크롤링테스트"
        android:textSize="22dp" />
    />
    <Button
        android:id="@+id/shop"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="11번가"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="onShopClicked"
        />
    <Button
        android:id="@+id/productInfoBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="관심상품"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:onClick="onProductInfoClicked"
        />

</LinearLayout>